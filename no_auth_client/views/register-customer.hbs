<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8" />
    <title>Đăng ký tài khoản</title>
    <link rel="stylesheet" href="/styles/register-customer.css" />
</head>

<body>
    <div class="register-container">
        <h1>Đăng ký Customer</h1>

        {{#if message}}
        <div class="message success">{{message}}</div>
        {{/if}}

        {{#if error}}
        <div class="message error">{{error}}</div>
        {{/if}}

        <form method="POST" action="/auth/register">
            <label for="first_name">Họ</label>
            <input type="text" id="first_name" name="first_name" placeholder="Nguyễn" />

            <label for="last_name">Tên</label>
            <input type="text" id="last_name" name="last_name" placeholder="Văn A" />

            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="email@example.com" required />

            <label for="password">Mật khẩu</label>
            <input type="password" id="password" name="password" required />

            <button type="submit">Đăng ký</button>
        </form>
    </div>
</body>

</html>